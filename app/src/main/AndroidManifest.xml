<?xml version="1.0" encoding="utf-8"?>
<manifest android="http://schemas.android.com/apk/res/android"
    tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- AÃ±adimos este permiso para que nuestra app pueda conectarse a internet -->
    <application
        allowBackup="true"
        dataExtractionRules="@xml/data_extraction_rules"
        fullBackupContent="@xml/backup_rules"
        icon="@mipmap/ic_launcher"
        label="@string/app_name"
        roundIcon="@mipmap/ic_launcher_round"
        supportsRtl="true"
        theme="@style/Theme.HabitTracker"
        targetApi="36">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.HabitosSaludables">
            <intent-filter>
                <action name="android.intent.action.MAIN" />
                <category name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
